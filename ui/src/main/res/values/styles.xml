<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <!--to cleanup start-->
        <item name="colorOnPrimary">@color/gray_50</item>
        <item name="colorOnBackground">@color/gray_50</item>
        <item name="colorOnSurface">@color/gray_50</item>
        <item name="colorOnPrimarySurface">@color/gray_50</item>
        <!--to cleanup end-->
        <item name="android:textColorHint">@color/hintTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="subHeader">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="desc">
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="copyrightText">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="card.bkground">
        <item name="android:clickable">true</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="card.cardText">
        <item name="android:textAppearance">@style/Text.White.Itemheader.Bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">8</item>
        <item name="android:maxLines">3</item>
    </style>




    <style name="card"></style>
</resources>