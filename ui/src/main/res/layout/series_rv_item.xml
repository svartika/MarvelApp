<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="seriesItem"
            type="com.example.controllers.commons.ProcessedMarvelSeries" />
        <variable
            name="cardClickedListener"
            type="com.example.controllers.commons.CardClickListener" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/character_image_width"
        android:layout_height="@dimen/character_image_height"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:elevation="3dp"
        app:cardCornerRadius="2dp"
        app:item="@{seriesItem}"
        app:onClickJava="@{cardClickedListener}"
        app:cardBackgroundColor="@color/colorBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

           <!-- <TextView
                android:id="@+id/seriesName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@{seriesItem.title}"
                android:textAlignment="center"
                android:textColor="#FF000000"
                app:layout_constraintBottom_toTopOf="@id/seriesImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />-->

            <ImageView
                android:id="@+id/seriesImage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/character_image_height"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:url="@{seriesItem.imageurl}" />

            <TextView
                android:id="@+id/seriesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:visibility="@{seriesItem.displayName()}"
                android:text="@{seriesItem.title}"
                android:textAppearance="@style/Text.White.Itemheader.Bold"
                android:textAlignment="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>