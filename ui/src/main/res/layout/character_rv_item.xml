<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="marvelItem"
            type="com.example.controllers.commons.ProcessedMarvelCharacter" />

        <variable
            name="clickHandler"
            type="com.example.controllers.commons.CardClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="2dp"
        android:elevation="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:item="@{marvelItem}"
        app:onClickJava="@{clickHandler}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mCharacterImage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/character_image_height"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:blur="@{false}"
                app:url="@{marvelItem.imageurl}" />

            <ImageView
                android:id="@+id/mCharacterImageBlur"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                app:blur="@{true}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:url="@{marvelItem.imageurl}" />

            <TextView
                android:id="@+id/mCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{marvelItem.name}"
                android:textAppearance="@style/Text.White.Itemheader.Bold"
                android:textAlignment="center"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@+id/mCharacterImageBlur"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>