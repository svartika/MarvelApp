<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="marvelItem"
            type="com.example.controllers.commons.ProcessedMarvelCharacter" />
        <variable
            name="clickHandler"
            type="com.example.controllers.commons.CardClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/character_image_width"
        android:layout_height="@dimen/character_image_height"
        app:cardCornerRadius="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_margin="4dp"
        app:item="@{marvelItem}"
        app:onClick="@{clickHandler}"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/mCharacterImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@android:drawable/ic_menu_add"
                app:layout_constraintBottom_toTopOf="@id/mCharacter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:url="@{marvelItem.imageurl}"/>

            <TextView
                android:id="@+id/mCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#FF000000"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/mCharacterImage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@{marvelItem.name}"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>